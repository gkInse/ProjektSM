<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/word_details_padding_horizontal"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".learning.WordDetailsActivity">

        <include layout="@layout/label_text_view"
            android:id="@+id/word_label" />
        <include layout="@layout/content_text_view"
            android:id="@+id/word_text_view" />

        <include layout="@layout/label_text_view"
            android:id="@+id/part_of_speech_label" />
        <include layout="@layout/content_text_view"
            android:id="@+id/part_of_speech_text_view" />

        <include layout="@layout/label_text_view"
            android:id="@+id/definition_label" />
        <include layout="@layout/content_text_view"
            android:id="@+id/definition_text_view" />

        <include layout="@layout/label_text_view"
            android:id="@+id/example_label" />
        <include layout="@layout/content_text_view"
            android:id="@+id/example_text_view" />

        <include layout="@layout/label_text_view"
            android:id="@+id/synonyms_label" />
        <include layout="@layout/content_text_view"
            android:id="@+id/synonyms_text_view" />

        <Button android:id="@+id/open_in_dictionary_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/word_details_content_margin_top"
            android:text="@string/open_in_dictionary" />
    </LinearLayout>
</ScrollView>