<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/statistics_padding_horizontal"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/label_text_view"
            android:id="@+id/correct_definition_matches_label" />
        <include layout="@layout/content_text_view"
            android:id="@+id/correct_definition_matches_content" />

        <include layout="@layout/label_text_view"
            android:id="@+id/learned_words_label" />
        <include layout="@layout/content_text_view"
            android:id="@+id/learned_words_content" />

        <include layout="@layout/label_text_view"
            android:id="@+id/correct_synonym_matches_label" />
        <include layout="@layout/content_text_view"
            android:id="@+id/correct_synonym_matches_content" />

        <include layout="@layout/label_text_view"
            android:id="@+id/downloaded_words_label" />
        <include layout="@layout/content_text_view"
            android:id="@+id/downloaded_words_content" />
    </LinearLayout>
</ScrollView>