<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/word_list_item_height"
    app:cardCornerRadius="@dimen/word_list_card_corner_radius"
    app:cardElevation="@dimen/word_list_card_elevation"
    app:cardUseCompatPadding="true"
    android:id="@+id/word_list_item_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View android:id="@+id/level_indicator_view"
            android:layout_width="@dimen/word_list_level_indicator_width"
            android:layout_height="match_parent"
            tools:background="#ffff0000" />
        <TextView
            android:id="@+id/word_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/text_view_style"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/word_list_text_padding_start"
            android:textSize="@dimen/word_list_text_size"
            tools:text="przykÅ‚adowy tekst"
            android:textColor="@color/text" />
    </LinearLayout>
</androidx.cardview.widget.CardView>